<Window x:Class="Library_Management.BookDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library_Management"
        mc:Ignorable="d"
       Title="Book Details" Height="230" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Title" Margin="0,0,0,5" />
        <TextBox Text="{Binding BookTitle, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Author" Margin="10,10,0,5" />
        <TextBox Text="{Binding BookAuthor, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Year" Margin="10,10,0,5" />
        <TextBox Text="{Binding BookYear, UpdateSourceTrigger=PropertyChanged}" />

        <Button Content="Save" Margin="10,10,0,0" Command="{Binding SaveCommand}" />
    </StackPanel>
</Window>
